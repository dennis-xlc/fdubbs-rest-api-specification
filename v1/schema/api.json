{
	"kind":"discovery#restDescription",
	"discoveryVersion":"v1",
	"id":"fdubbs_rest_api:v1",
	"name":"fudan bbs rest api",
	"version":"1.0",
	"title":"fudan bbs rest api",
	"description":"fudan bbs rest api",
	"documentationLink":"../spec.md",
	"protocol":"rest",
	"rootUrl":"http://rest-api-for-fdubbs.herokuapp.com/",
	"servicePath":"api/v1/",
	"auth":{
		"oauth2":{
			"scopes":{
				"http://rest-api-for-fdubbs.herokuapp.com/":{
					"description":"restful api"
				}
			}
		}
	},
	"resources":{
		"loginSession":{
			"methods":{
				"user-login":{
					"id":"user-login-session.create",
					"path":"/user/login",
					"httpMethod":"POST",
					"description": "user login",
					"parameters":{
						"auth_code":{
							"type":"string",
							"description":"user auth code",
							"required":false,
							"location":"cookie"
						},
						"user_id":{
							"type":"string",
							"description":"user id",
							"required":true,
							"location":"form"
						},
						"passwd":{
							"type":"string",
							"description":"user id",
							"required":true,
							"location":"form"
						}

					},
					"response":{
						"type":"object",
						"description":"login response",
						"$ref":"login_response.json"
					},
					"scopes":[
						"http://rest-api-for-fdubbs.herokuapp.com/"
					]
				},
				"user-logout":{
					"id":"user-login-session.delete",
					"path":"/user/logout",
					"httpMethod":"POST",
					"description": "user login",
					"parameters":{
						"auth_code":{
							"type":"string",
							"description":"user auth code",
							"required":true,
							"location":"cookie"
						}
					},
					"scopes":[
						"http://rest-api-for-fdubbs.herokuapp.com/"
					]
				}
			}
		},
		"user":{
			"methods":{
				"get-user-info":{
					"id":"user_info.get",
					"path":"/user/info/{user_id}",
					"httpMethod":"GET",
					"description": "get info of the specified user",
					"parameters":{
						"auth_code":{
							"type":"string",
							"description":"user auth code",
							"required":true,
							"location":"cookie"
						},
						"user_id":{
							"type":"string",
							"description":"user id",
							"required":true,
							"location":"path"
						}
					},
					"response":{
						"type":"object",
						"description":"info of the specified user",
						"$ref":"user_info.json"
					},
					"scopes":[
						"http://rest-api-for-fdubbs.herokuapp.com/"
					]
				}
			}
		},
		"friend":{
			"methods":{
				"get-all-friend":{
					"id":"all_friend.get",
					"path":"/profile/friend/all",
					"httpMethod":"GET",
					"description": "get all friends of the logined user",
					"parameters":{
						"auth_code":{
							"type":"string",
							"description":"user auth code",
							"required":true,
							"location":"cookie"
						}
					},
					"response":{
						"type":"array",
						"description":"all friends of the logined user",
						"items":{
							"type":"object",
							"$ref":"friend.json"
						}
					},
					"scopes":[
						"http://rest-api-for-fdubbs.herokuapp.com/"
					]
				},
				"get-online-friend":{
					"id":"online_friend.get",
					"path":"/profile/friend/onilne",
					"httpMethod":"GET",
					"description": "get all online friends of the logined user",
					"parameters":{
						"auth_code":{
							"type":"string",
							"description":"user auth code",
							"required":true,
							"location":"cookie"
						}
					},
					"response":{
						"type":"array",
						"description":"all online friends of the logined user",
						"items":{
							"type":"object",
							"$ref":"friend.json"
						}
					},
					"scopes":[
						"http://rest-api-for-fdubbs.herokuapp.com/"
					]
				}
			}
		},
		"profile":{
			"methods":{
				"get-basic-profile":{
					"id":"profile_basic.get",
					"path":"/profile/basic",
					"httpMethod":"GET",
					"description": "get the basic profile of the logined user",
					"parameters":{
						"auth_code":{
							"type":"string",
							"description":"user auth code",
							"required":true,
							"location":"cookie"
						}
					},
					"response":{
						"type":"object",
						"description":"the basic profile of the logined user",
						"$ref":"basic_profile.json"
					},
					"scopes":[
						"http://rest-api-for-fdubbs.herokuapp.com/"
					]
				},
				"get-user-introdution":{
					"id":"user_introdution.get",
					"path":"/profile/introdution",
					"httpMethod":"GET",
					"description": "get the introdution of the logined user",
					"parameters":{
						"auth_code":{
							"type":"string",
							"description":"user auth code",
							"required":true,
							"location":"cookie"
						}
					},
					"response":{
						"type":"object",
						"description":"the introdution of the logined user",
						"$ref":"user_introdution.json"
					},
					"scopes":[
						"http://rest-api-for-fdubbs.herokuapp.com/"
					]
				},
				"get-user-signature":{
					"id":"user_signature.get",
					"path":"/profile/signature",
					"httpMethod":"GET",
					"description": "get the signature of the logined user",
					"parameters":{
						"auth_code":{
							"type":"string",
							"description":"user auth code",
							"required":true,
							"location":"cookie"
						}
					},
					"response":{
						"type":"object",
						"description":"the signature of the logined user",
						"$ref":"user_signature.json"
					},
					"scopes":[
						"http://rest-api-for-fdubbs.herokuapp.com/"
					]
				}
			}
		},
		"mail":{
			"methods":{
				"get-new-mails":{
					"id":"new_mails.get",
					"path":"/mail/new",
					"httpMethod":"GET",
					"description": "get the new mails of the logined user",
					"parameters":{
						"auth_code":{
							"type":"string",
							"description":"user auth code",
							"required":true,
							"location":"cookie"
						}
					},
					"response":{
						"type":"array",
						"description":"new mails of the logined user",
						"items":{
							"type":"object",
							"$ref":"mail_summary.json"
						}
					},
					"scopes":[
						"http://rest-api-for-fdubbs.herokuapp.com/"
					]
				},
				"get-all-mails":{
					"id":"all_mails.get",
					"path":"/mail/all/{start_num}",
					"httpMethod":"GET",
					"description": "get all mails of the logined user, if {start_num} is missing, then return last 20 mails",
					"parameters":{
						"auth_code":{
							"type":"string",
							"description":"user auth code",
							"required":true,
							"location":"cookie"
						},
						"start_num":{
							"type":"integer",
							"description":"start number",
							"required":false,
							"location":"path"
						}
					},
					"response":{
						"type":"object",
						"description":"all mails of the logined user",
						"$ref":"mail_summary_inbox.json"
					},
					"scopes":[
						"http://rest-api-for-fdubbs.herokuapp.com/"
					]
				},
				"get-mail-detail":{
					"id":"mail_detail.get",
					"path":"/mail/detail/{mail_number}/{mail_link}",
					"httpMethod":"GET",
					"description": "get the mail detail ",
					"parameters":{
						"auth_code":{
							"type":"string",
							"description":"user auth code",
							"required":true,
							"location":"cookie"
						},
						"mail_number":{
							"type":"integer",
							"description":"mail number",
							"required":true,
							"location":"path"
						},
						"mail_link":{
							"type":"integer",
							"description":"mail link",
							"required":true,
							"location":"path"
						}
					},
					"response":{
						"type":"object",
						"description":"all mails of the logined user",
						"$ref":"mail_detail.json"
					},
					"scopes":[
						"http://rest-api-for-fdubbs.herokuapp.com/"
					]
				}
			}
		},
