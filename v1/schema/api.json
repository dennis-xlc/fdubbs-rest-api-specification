{
	"kind":"discovery#restDescription",
	"discoveryVersion":"v1",
	"id":"fdubbs_rest_api:v1",
	"name":"fudan bbs rest api",
	"version":"1.0",
	"title":"fudan bbs rest api",
	"description":"fudan bbs rest api",
	"documentationLink":"../spec.md",
	"protocol":"rest",
	"rootUrl":"http://rest-api-for-fdubbs.herokuapp.com/",
	"servicePath":"api/v1/",
	"auth":{
		"oauth2":{
			"scopes":{
				"http://rest-api-for-fdubbs.herokuapp.com/":{
					"description":"restful api"
				}
			}
		}
	},
	"resources":{
		"loginSession":{
			"methods":{
				"user-login":{
					"id":"user-login-session.create",
					"path":"/user/login",
					"httpMethod":"POST",
					"parameters":{
						"user_id":{
							"type":"string",
							"description":"user id",
							"location":"form"
						},
						"passwd":{
							"type":"string",
							"description":"user id",
							"location":"form"
						}

					},
					"description": "user login",
					"response":{
						"type":"object",
						"description":"login response",
						"$ref":"login_response.json"
					},
					"scopes":[
						"http://rest-api-for-fdubbs.herokuapp.com/"
					]
				},
				"user-logout":{
					"id":"user-login-session.delete",
					"path":"/user/logout",
					"httpMethod":"POST",
					"parameters":{
						"user_id":{
							"type":"string",
							"description":"user id",
							"location":"form"
						},
						"auth_code":{
							"type":"string",
							"description":"user auth code",
							"required":true,
							"location":"cookie"
						}         

					},
					"description": "user login",
					"response":{
						"type":"object",
						"description":"login response",
						"$ref":"login_response.json"
					},
					"scopes":[
						"http://rest-api-for-fdubbs.herokuapp.com/"
					]
				}
			}
		},
		"board":{
			"methods":{
				"list-all-boards":{
					"id":"all_boards.list",
					"path":"/boards/all",
					"httpMethod":"GET",
					"description": "list all boards",
					"response":{
						"type":"array",
						"description":"all boards",
						"items":{
							"type":"object",
							"$ref":"board.json"
						}
					},
					"scopes":[
						"http://rest-api-for-fdubbs.herokuapp.com/"
					]
				},
				"list-user-favorite-boards":{
					"id":"user_favorite_boards.list",
					"path":"/boards/favor",
					"httpMethod":"GET",
					"description": "list all favor boards of the user",
					"parameters":{
						"auth_code":{
							"type":"string",
							"description":"user auth code",
							"required":true,
							"location":"cookie"
						}
					},
					"response":{
						"type":"array",
						"description":"all favor boards of the user",
						"items":{
							"type":"object",
							"$ref":"board.json"
						}
					},
					"scopes":[
						"http://rest-api-for-fdubbs.herokuapp.com/"
					]
				}
			}
		},
		"section":{
			"methods":{
				"list-all-sections":{
					"id":"sections.list",
					"path":"/section/all",
					"httpMethod":"GET",
					"description": "list all sections",
					"response":{
						"type":"array",
						"description":"all sections' meta data",
						"items":{
							"type":"object",
							"$ref":"section_meta_data.json"
						}
					},
					"scopes":[
						"http://rest-api-for-fdubbs.herokuapp.com/"
					]
				},
				"show-all-boards-in-section":{
					"id":"boards.list",
					"path":"section/{section_id}/",
					"httpMethod":"GET",
					"parameters":{
						"section_id":{
							"type":"integer",
							"description":"section id",
							"location":"path"
						}
					},
					"description": "list all boards in secified section",
					"response":{
						"type":"object",
						"description":"section detail",
						"$ref":"section.json"
					},
					"scopes":[
						"http://rest-api-for-fdubbs.herokuapp.com/"
					]
				}
			}
		}
	}

}
