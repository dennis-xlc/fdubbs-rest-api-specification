			"methods":{
				"list-all-boards":{
					"id":"all_boards.list",
					"path":"/boards/all",
					"httpMethod":"GET",
					"description": "list all boards",
					"parameters":{
						"auth_code":{
							"type":"string",
							"description":"user auth code",
							"required":false,
							"location":"cookie"
						}
					},
					"response":{
						"type":"array",
						"description":"all boards",
						"items":{
							"type":"object",
							"$ref":"board.json"
						}
					},
					"scopes":[
						"http://rest-api-for-fdubbs.herokuapp.com/"
					]
				},
				"list-user-favorite-boards":{
					"id":"user_favorite_boards.list",
					"path":"/boards/favor",
					"httpMethod":"GET",
					"description": "list all favor boards of the user",
					"parameters":{
						"auth_code":{
							"type":"string",
							"description":"user auth code",
							"required":true,
							"location":"cookie"
						}
					},
					"response":{
						"type":"array",
						"description":"all favor boards of the user",
						"items":{
							"type":"object",
							"$ref":"board.json"
						}
					},
					"scopes":[
						"http://rest-api-for-fdubbs.herokuapp.com/"
					]
				}
			}
		},
		"section":{
			"methods":{
				"list-all-sections":{
					"id":"sections.list",
					"path":"/section/all",
					"httpMethod":"GET",
					"description": "list all sections",
					"parameters":{
						"auth_code":{
							"type":"string",
							"description":"user auth code",
							"required":false,
							"location":"cookie"
						}
					},
					"response":{
						"type":"array",
						"description":"all sections' meta data",
						"items":{
							"type":"object",
							"$ref":"section_meta_data.json"
						}
					},
					"scopes":[
						"http://rest-api-for-fdubbs.herokuapp.com/"
					]
				},
				"show-all-boards-in-section":{
					"id":"boards.list",
					"path":"section/{section_id}/",
					"httpMethod":"GET",
					"parameters":{
						"auth_code":{
							"type":"string",
							"description":"user auth code",
							"required":false,
							"location":"cookie"
						},
						"section_id":{
							"type":"integer",
							"description":"section id",
							"required":true,
							"location":"path"
						}
					},
					"description": "list all boards in secified section",
					"response":{
						"type":"object",
						"description":"section detail",
						"$ref":"section.json"
					},
					"scopes":[
						"http://rest-api-for-fdubbs.herokuapp.com/"
					]
				}
			}
		},
