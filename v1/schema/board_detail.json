{
    "type":"object",
    "$schema":"http://json-schema.org/draft-04/hyper-schema",
    "name":"board detail",
    "description":"board detail",
    "id":"board_detail:v1",
    "properties":{
        "board_meta_data":{
            "type":"object",
            "description":"board_meta_data",
            "$ref":"board_meta_data.json"
        },
        "category":{
            "type":"string",
            "description":"board category"
        },
        "is_directory":{
            "type":"boolean",
            "description":"if the board is a directory which contains sub-board"
        },
        "has_unread_post":{
            "type":"boolean",
            "description":"if the board contains any unread post to the user"
        }
    }
}