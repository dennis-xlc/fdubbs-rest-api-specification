{
	"type":"object",
	"$schema": "http://json-schema.org/draft-04/hyper-schema",
	"name": "user info",
	"description": "user info",
	"id": "user_info:v1",
	"properties":{
		"user_meta_data":{
            "type":"object",
            "$ref":"user_meta_data.json"
        },
		"ident":{
			"type":"string",
			"description":"ident"
		},
        "user_performance":{
            "type":"object",
            "$ref":"user_performance.json"
        },
		"idle_time":{
			"type":"integer",
			"description":"idle time in minutes"
		},
		"is_visible":{
			"type":"boolean",
			"description": "is visible"
		},
		"is_web":{
			"type":"boolean",
			"description": "is login on web"
		},
		"desc":{
			"type":"string",
			"description":"desc"
		},
        "user_signature":{
            "type":"object",
            "$ref":"user_signature.json"
        }
	}
}