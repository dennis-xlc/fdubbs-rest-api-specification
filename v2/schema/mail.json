{
	"type":"object",
	"$schema": "http://json-schema.org/draft-04/hyper-schema",
	"name": "mail detail",
	"description": "mail detail",
	"id": "mail:v2",
	"properties":{
		"id":{
			"type":"string",
			"description": "The mail id"
		},
		"link":{
			"type":"string",
			"description": "The link of the mail"
		},
		"title":{
			"type":"string",
			"description": "The title of this mail"
		},
		"sender":{
			"type":"object",
			"description":"sender of the mail",
			"id":"poster",
			"properties":{
				"name":{
					"type":"string",
					"description":"The name of the sender"
				},
				"nick":{
					"type":"string",
					"description":"The nick of the sender"
				}
			}
		},
		"unread":{
			"type":"boolean",
			"description": "'true' if the mail has not read"
		},
		"mark_sign":{
			"type":"string",
			"description": "The mark sign of the mail"
		},
		"source":{
			"type":"string",
			"description": "The source of the mail"
		},
		"ip_address":{
			"type":"string",
			"description": "The ip address of this mail"
		},
		"sent_time":{
			"type":"date",
			"description": "The sent time of this mail"
		},
		"content":{
			"type":"string",
			"description": "mail content in html format"
		}
	}
}
