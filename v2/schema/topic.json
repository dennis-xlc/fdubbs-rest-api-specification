{
  "type":"object",
  "$schema":"http://json-schema.org/draft-04/hyper-schema",
  "name":"topic",
  "description":"post detail",
  "id":"topic:v2",
  "properties":{
    "id":{
      "type":"string",
      "description":"The unique identifier of a post"
    },
    "title":{
      "type":"string",
      "description":"The title of a post"
    },
    "poster":{
      "type":"object",
      "description":"poster of the post",
      "$ref":"poster.json"
    },
    "post_time":{
      "type":"date",
      "description":"The post time of the post"
    },
    "board":{
      "type":"string",
      "description":"The board to which the post belongs"
    },
    "board_id":{
      "type":"string",
      "description":"The board id to which the post belongs"
    },
    "mark_sign":{
      "type":"string",
      "description": "mark sign of a post"
    },
    "repliable":{
      "type":"boolean",
      "description": "whether the post can be replied"
    },
    "post_count":{
      "type":"integer",
      "description": "reply number of the post"
    }
  }
}