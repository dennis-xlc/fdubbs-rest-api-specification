{
	"type":"object",
	"$schema": "http://json-schema.org/draft-04/hyper-schema",
	"name": "user info",
	"description": "user info",
	"id": "user:v2",
	"properties":{
		"id":{
			"type":"string",
			"description":"user id"
		},
		"nick":{
			"type":"string",
			"description":"nick"
		},
        "gender":{
            "type":"string",
            "description":"gender"
        },
        "birth_date":{
            "type":"object",
            "description":"user birthday",
            "id":"user_birth_day",
            "properties":{
                "year":{
                    "type":"integer",
                    "description":"year of birth"
                    },
                "month":{
                    "type":"integer",
                    "description":"month of birth"
                },
                "day":{
                    "type":"integer",
                    "description":"day of birth"
                }
            }
        },
        "online_time":{
            "type":"integer",
            "description":"total online time in min"
        },
        "register_date":{
            "type":"string",
            "description":"register date of the user"
        },
        "post_count":{
            "type":"integer",
            "description":"total number of posts"
        },
        "login_count":{
            "type":"integer",
            "description":"total times of posts"
        },
		"horoscope":{
			"type":"string",
			"description":"horoscope"
		},
        "last_login_time":{
            "type":"string",
            "description":"last login time"
        },
        "last_login_ip":{
            "type":"string",
            "description":"last login ip"
        },
		"ident":{
			"type":"string",
			"description":"ident"
		},
		"performance":{
			"type":"string",
			"description":"performance"
		},
		"hp":{
			"type":"integer",
			"description":"hp"
		},
		"level":{
			"type":"integer",
			"description":"level"
		},
		"repeat":{
			"type":"integer",
			"description":"repeat"
		},
		"contrib":{
			"type":"integer",
			"description":"contrib"
		},
		"rank":{
			"type":"string",
			"description":"rank"
		},
		"idle_time":{
			"type":"integer",
			"description":"idle time in minutes"
		},
		"is_visible":{
			"type":"boolean",
			"description": "is visible"
		},
		"is_web":{
			"type":"boolean",
			"description": "is login on web"
		},
		"introdution":{
            "type":"string",
            "description":"user introdution"
        },
		"desc":{
			"type":"string",
			"description":"desc"
		},
        "signature":{
            "type":"string",
            "description":"user signature"
        }
	}
}